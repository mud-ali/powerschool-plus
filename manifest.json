{
    "name": "Powerschool Plus",
    "description": "Powerschool LMS, made better",
    "version": "1.0",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "unlimitedStorage"
    ],
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' 'wasm-unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "https://bcts.powerschool.com/guardian/home.html*",
                "https://bcts.powerschool.com/guardian/home.html/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "myemail@aaravdudhia.com",
            "strict_min_version": "42.0"
        }
    }
}